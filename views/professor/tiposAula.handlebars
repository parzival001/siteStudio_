<!-- views/professor/tiposAula.handlebars -->

<h1>Tipos de Aula</h1>

<form action="/professor/tipos-aula/adicionar" method="POST" class="mb-3">
  <div class="form-group">
    <label for="nome">Nome do Tipo de Aula:</label>
    <input type="text" name="nome" id="nome" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-primary mt-2">Adicionar Tipo</button>
</form>

<hr>

<h2>Tipos Cadastrados</h2>
<ul class="list-group">
  {{#each tipos}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{this.nome}}
      <form action="/professor/tipos-aula/deletar/{{this.id}}" method="POST" onsubmit="return confirm('Deseja realmente deletar este tipo?')">
        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
      </form>
    </li>
  {{/each}}
</ul>