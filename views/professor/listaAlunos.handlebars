<div class="container py-5 text-white">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <h2 class="text-center mb-4">Alunos Cadastrados</h2>

      <!-- Barra de busca -->
      <form method="GET" action="/professor/alunos" class="mb-4">
        <div class="input-group">
          <input type="text" name="busca" class="form-control" placeholder="Buscar por nome..." value="{{busca}}">
          <button class="btn btn-outline-custom" type="submit"
            style="color: #5A189A; border-color: #5A189A;">Buscar</button>
        </div>
      </form>

      <!-- Botão Home (centralizado) -->
      <div class="text-center mb-4">
        <a href="/professor/home" class="btn btn-outline-custom" style="color: #5A189A; border-color: #5A189A;">
          Home</a>
      </div>

      <!-- TABELA (para telas médias ou maiores) -->
      <div class="card text-dark p-4 mb-4 d-none d-md-block" style="background-color: #B395C0;">
        <div class="table-responsive">
          <table class="table table-bordered text-center align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th>Nome</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              {{#each alunos}}
              <tr>
                <td>{{this.nome}}</td>
                <td class="d-flex flex-wrap justify-content-center gap-2">
                  <a href="/professor/alunos/{{this.id}}/editar" class="btn btn-outline-custom"
                    style="color: #5A189A; border-color: #5A189A;">Editar</a>
                  <a href="/professor/aluno/{{this.id}}/anamnese" class="btn btn-outline-custom"
                    style="color: #5A189A; border-color: #5A189A;">Anamnese</a>
                  <a href="/professor/pacotes/aluno/{{this.id}}" class="btn btn-outline-custom"
                    style="color: #5A189A; border-color: #5A189A;">Ver Pacotes</a>
                  <a href="/professor/aluno/{{this.id}}/dados-pessoais" class="btn btn-outline-custom"
                    style="color: #5A189A; border-color: #5A189A;">Dados Pessoais</a>
                  <form action="/professor/alunos/{{this.id}}/delete" method="POST"
                    onsubmit="return confirm('Tem certeza que deseja deletar?')">
                    <button class="btn btn-outline-danger">Deletar</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>

      <!-- CARDS (para celular) -->
      <div class="d-block d-md-none">
        {{#each alunos}}
        <div class="card text-dark p-3 mb-3" style="background-color: #B395C0;">
          <h5 class="mb-3">{{this.nome}}</h5>
          <div class="d-flex flex-column gap-2">
            <a href="/professor/alunos/{{this.id}}/editar" class="btn btn-outline-custom"
              style="color: #5A189A; border-color: #5A189A;">Editar</a>
            <a href="/professor/aluno/{{this.id}}/anamnese" class="btn btn-outline-custom"
              style="color: #5A189A; border-color: #5A189A;">Anamnese</a>
            <a href="/professor/pacotes/aluno/{{this.id}}" class="btn btn-outline-custom"
              style="color: #5A189A; border-color: #5A189A;">Ver Pacotes</a>
            <a href="/professor/aluno/{{this.id}}/dados-pessoais" class="btn btn-outline-custom"
              style="color: #5A189A; border-color: #5A189A;">Dados Pessoais</a>
            <form action="/professor/alunos/{{this.id}}/delete" method="POST"
              onsubmit="return confirm('Tem certeza que deseja deletar?')">
              <button class="btn btn-outline-danger">Deletar</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>

      <div class="text-center mt-4">
        <a href="/professor/home" class="btn btn-outline-custom">Home</a>
      </div>
    </div>
  </div>
</div>