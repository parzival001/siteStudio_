<form method="POST" action="/professor/pacotes/editar/{{pacote.id}}">
  <input type="hidden" name="aluno_id" value="{{pacote.aluno_id}}">

  <!-- Tipo -->
  <div class="mb-3">
    <label class="form-label">Tipo:</label>
    <select name="tipo" class="form-select" required>
      <option value="mensal" {{#ifCond pacote.tipo '==' 'mensal' }}selected{{/ifCond}}>Mensal</option>
      <option value="trimestral" {{#ifCond pacote.tipo '==' 'trimestral' }}selected{{/ifCond}}>Trimestral</option>
      <option value="semestral" {{#ifCond pacote.tipo '==' 'semestral' }}selected{{/ifCond}}>Semestral</option>
      <option value="anual" {{#ifCond pacote.tipo '==' 'anual' }}selected{{/ifCond}}>Anual</option>
      <option value="avulsa" {{#ifCond pacote.tipo '==' 'avulsa' }}selected{{/ifCond}}>Avulsa</option>
    </select>
  </div>

  <!-- Categoria (somente leitura) -->
  <div class="mb-3">
    <label class="form-label">Categoria:</label>
    <input class="form-control" value="{{pacote.categoria_nome}}" disabled>
    <input type="hidden" name="categoria_id" value="{{pacote.categoria_id}}">
  </div>

  <!-- Quantidade -->
  <div class="mb-3">
    <label class="form-label">Quantidade de Aulas:</label>
    <input type="number" name="quantidade_aulas" class="form-control" value="{{pacote.quantidade_aulas}}" required>
  </div>

  <!-- Data de Início -->
  <div class="mb-3">
    <label class="form-label">Data de Início:</label>
    <input type="date" name="data_inicio" class="form-control" value="{{pacote.data_inicio}}">
  </div>

  <!-- Pago -->
  <div class="mb-3 form-check">
    <input class="form-check-input" type="checkbox" name="pago" value="1" id="pagoCheck" {{#if
      pacote.pago}}checked{{/if}}>
    <label class="form-check-label" for="pagoCheck">Pago</label>
  </div>

  <button type="submit" class="btn btn-outline-custom w-100">Salvar Alterações</button>
</form>