<h2 class="mb-4">Pacotes de {{aluno.nome}}</h2>

<a href="/professor/alunos" class="btn btn-secondary mb-3">← Voltar</a>
<a href="/professor/pacotes/novo/{{aluno.id}}" class="btn btn-primary mb-3">+ Novo Pacote</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Categoria</th>
      <th>Qtd Aulas</th>
      <th>Usadas</th>
      <th>Início</th>
      <th>Validade</th>
      <th>Status</th>
      <th>Pago</th>
    </tr>
  </thead>
  <tbody>
    {{#each pacotes}}
    <tr>
      <td>{{this.tipo}}</td>
      <td>{{this.categoria_nome}}</td>
      <td>{{this.quantidade_aulas}}</td>
      <td>{{this.aulas_utilizadas}}</td>
      <td>{{formatDate this.data_inicio}}</td>
      <td>{{formatDate this.data_validade}}</td>
      <td>
        {{#if this.expirado}}<span class="badge bg-danger">Vencido</span>
        {{else}}<span class="badge bg-success">Válido</span>{{/if}}
      </td>
      <td>{{#if this.pago}}Sim{{else}}Não{{/if}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>