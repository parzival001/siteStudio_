<div class="container py-5 text-white">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <h2 class="text-center mb-4">Editar Aluno</h2>

      <div class="mb-3">
        <a href="/professor/alunos" class="btn btn-outline-custom">&larr; Voltar</a>
      </div>

      <div class="card p-4" style="background-color: #B395C0;">
        <form method="POST" action="/professor/alunos/{{aluno.id}}/editar">

          <div class="mb-3">
            <label for="nome" class="form-label text-white">Nome:</label>
            <input type="text" name="nome" id="nome" class="form-control" value="{{aluno.nome}}" required>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label text-white">Email:</label>
            <input type="email" name="email" id="email" class="form-control" value="{{aluno.email}}" required>
          </div>

          <div class="mb-3">
            <label for="senha" class="form-label text-white">Nova Senha:</label>
            <input type="password" name="senha" id="senha" class="form-control"
              placeholder="Deixe em branco para nÃ£o alterar">
          </div>

          <button type="submit" class="btn btn-outline-custom w-100">Salvar</button>
        </form>
      </div>

    </div>
  </div>
</div>