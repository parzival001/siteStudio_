<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Sistema StudioArte</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">

  <!-- Select2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
    .select2-container--default .select2-selection--single {
      color: #000;
    }
    .select2-container--default .select2-results__option {
      color: #000;
    }
  </style>

</head>

<body>

<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">StudioArte</a>
    <div class="d-flex ms-auto">
      <a class="btn btn-outline-light" href="/logout">Sair</a>
    </div>
  </div>
</nav>

<div class="full-height-wrapper">
  {{{body}}}
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- jQuery e Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<!-- Ativação do Select2 nos selects com id 'aluno_id' -->
<script>
  $(document).ready(function() {
    $('#aluno_id').select2({
      placeholder: "Selecione ou pesquise o aluno",
      width: '100%'
    });
  });
</script>

</body>
</html>