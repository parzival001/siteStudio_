<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100 py-5">
  <div class="w-100" style="max-width: 600px;">
    <h2 class="text-center mb-4">Cadastrar Professor</h2>

    <form method="POST" action="/professor/cadastrar" class="bg-white p-4 rounded shadow">
      <div class="mb-3">
        <label class="form-label">Nome:</label>
        <input type="text" name="nome" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Email:</label>
        <input type="email" name="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Senha:</label>
        <input type="password" name="senha" class="form-control" required>
      </div>
      <button class="btn btn-outline-custom" style="color: #5A189A; border-color: #5A189A;">Cadastrar</button>
    </form>
  </div>

  <hr class="my-5 w-100" style="max-width: 600px;">

  <div class="w-100" style="max-width: 800px;">
    <h2 class="text-center mb-4">Professores Cadastrados</h2>

    <div class="table-responsive">
      <table class="table table-striped text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ação</th>
          </tr>
        </thead>
        <tbody>
          {{#each professores}}
          <tr>
            <td>{{this.nome}}</td>
            <td>{{this.email}}</td>
            <td>
              <form method="POST" action="/professor/deletar/{{this.id}}" onsubmit="return confirm('Tem certeza que deseja excluir este professor?');">
                <button type="submit" class="btn btn-outline-custom" style="color: red; border-color: RED;">Excluir</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Botão Home -->
  <a href="/professor/home" class="btn btn-outline-custom w-auto"
          style="color: #B19CD9; border-color: #B19CD9;">Home</a>
</div>

